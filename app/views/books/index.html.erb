<header>
  <h1>Books</h1>
</header>


<main>

  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
  <div class="form">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    <% end %>
    
    <h1>New books</h1>
    <%= form_with model:@book, url:"/books", local: true do |f| %>
    
      <h4>Title</h4>
      <%= f.text_field :title%>
      
      <h4>Body</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
  
</main>