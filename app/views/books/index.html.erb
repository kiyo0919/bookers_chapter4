<main>
  <h1>Books</h1>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="form">
    <h2>New book</h2>
    
      <% if @book.errors.any? %>
        <p style="color: red;"><%= @book.errors.count %>件のerrorが発生しました</p>
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      <% end %>
      
    <%= form_with model:@book, url:"/books", local: true do |f| %>
    
      <div class="field">
        <p>Title</p>
        <%= f.text_field :title%>
      </div>
      <div class="field">
      <p>Body</p>
      <%= f.text_area :body %>
      </div>
      <div class="field">
      <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
  
</main>