
<h1>Editing Book</h1>
<%= form_with model:@book, url: update_book_path(@book), local: true do |f| %>
<% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%=f.submit 'Update Book' %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", root_path %></p>